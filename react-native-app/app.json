{
  "expo": {
    "name": "BénévolApp",
    "slug": "benevolapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.jpg",
    "splash": {
      "image": "./assets/splash.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#7B68EE"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.benevolapp.app",
      "infoPlist": {
        "UIBackgroundModes": ["remote-notification"],
        "NSUserNotificationAlertStyle": "banner"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.jpg",
        "backgroundColor": "#7B68EE"
      },
      "googleServicesFile": "./google-services.json",
      "package": "com.benevolapp.app",
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "SCHEDULE_EXACT_ALARM",
        "VIBRATE",
        "POST_NOTIFICATIONS"
      ],
      "useNextNotificationsApi": true
    },
    "web": {
      "favicon": "./assets/icon.jpg"
    },
    "androidStatusBar": {
      "backgroundColor": "#7B68EE",
      "barStyle": "light-content",
      "translucent": false
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-image-picker",
        {
          "photosPermission": "L'application a besoin d'accéder à vos photos pour vous permettre d'uploader une image.",
          "cameraPermission": "L'application a besoin d'accéder à votre caméra pour prendre des photos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.jpg",
          "color": "#7B68EE",
          "sounds": [],
          "mode": "production"
        }
      ],
      [
       "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permettre à l'application d'accéder à votre position pour afficher les missions proches."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "c5fc1b6f-d572-4b6a-a6aa-a32e70507c10"
      }
    },
    "owner": "asmaaouahyb"
  }
}